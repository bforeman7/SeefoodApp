<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_gal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:drawableStart="@drawable/iris_logo_colored"
        android:drawableEnd="@drawable/iris_logo_colored"
        android:text="Image Selection"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/primaryLightColor"
        android:orientation="vertical">


        <Button
            android:id="@+id/button5"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:alpha="1"
            android:background="@color/white"
            android:drawableTop="@drawable/baseline_camera_alt_black_18dp"
            android:text="Take a Picture"
            android:textAlignment="center" />

        <Button
            android:id="@+id/button4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:alpha="1"
            android:background="@color/white"
            android:drawableTop="@drawable/baseline_add_photo_alternate_black_18dp"
            android:text="Select an Image"
            android:textAlignment="center" />

        <Button
            android:id="@+id/button6"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:alpha="1"
            android:background="@color/white"
            android:drawableTop="@drawable/baseline_collections_black_18dp"
            android:text="Review and Upload"
            android:textAlignment="center" />


    </LinearLayout>

</RelativeLayout>
